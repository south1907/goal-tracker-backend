# Environment Configuration
# Copy this file to .env and update the values

# Database
DATABASE_URL=mysql+pymysql://goals:goalspassword@mysql:3306/goals
DATABASE_URL_LOCAL=mysql+pymysql://goals:goalspassword@localhost:3306/goals

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MIN=15
JWT_REFRESH_EXPIRE_DAYS=14

# Application Settings
APP_NAME=Goal Tracker Backend
APP_VERSION=0.1.0
DEBUG=true
LOG_LEVEL=INFO
TZ=Asia/Bangkok

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# MySQL Configuration
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=goals
MYSQL_USER=goals
MYSQL_PASSWORD=goalspassword

# Redis (for rate limiting and caching - optional)
REDIS_URL=redis://redis:6379/0

# File Upload (optional)
# MAX_FILE_SIZE is in bytes (10MB = 10485760)
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Email (optional - for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Monitoring (optional)
SENTRY_DSN=
HEALTH_CHECK_INTERVAL=30
